extends ../layout 

block content
  .container
    .row.margin_bottom     
        .panel.panel-default
          .panel-heading
            h3 #{keyword}
          .panel-body
            if category.movies && category.movies.length>0
              each item in category.movies
                .col-md-2
                  .thumbnail
                    a(href="/movie/"+ item._id )
                      img(src=item.poster,alt= item.title)
                    .caption
                      h3=item.title
                      P: a.btn.btn-primary(href="/movie/"+item._id, role="button") 观看电影
        ul.pagination
          - for(var i=0;i<totalPage;i++){
            - if(currentPage==i){
              li.active
                span #{currentPage+1}
            - }
            - else{
                li
                  a(href='/results?p='+i+'&'+query) #{i+1}
            -  }
          -  }